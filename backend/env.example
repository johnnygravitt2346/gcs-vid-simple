# Trivia Factory First Test Topology Environment Variables
# Copy this to .env and fill in your values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=<YOUR_PROJECT_ID>
GCS_BUCKET=<YOUR_BUCKET>

# API Configuration
API_BASE_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit UI Configuration
STREAMLIT_PORT=8501

# VM Configuration (set this to your VM's external IP)
VM_EXTERNAL_IP=<YOUR_VM_EXTERNAL_IP>

# Channel Configuration
CHANNEL_ID=default

# Gemini AI (optional for first test)
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>

# Service Account (should be attached to VM)
# No need to set GOOGLE_APPLICATION_CREDENTIALS if using attached service account
